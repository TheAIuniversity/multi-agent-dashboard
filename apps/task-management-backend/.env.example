# Server Configuration
NODE_ENV=development
PORT=3002
API_BASE_URL=http://localhost:3002

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/task_management?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Configuration (Generate these with crypto.generateKeyPairSync)
JWT_PRIVATE_KEY=LS0tLS1CRUdJTiBSU0EgUFJJVkFURSBLRVktLS0tLQ==  # Base64 encoded private key
JWT_PUBLIC_KEY=LS0tLS1CRUdJTiBQVUJMSUMgS0VZLS0tLS0=           # Base64 encoded public key
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-in-production

# CSRF Secret
CSRF_SECRET=your-csrf-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS S3 (Optional for production)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# WebSocket
WEBSOCKET_CORS_ORIGIN=http://localhost:3000